<div id="addFlightModal" class="modal">
    <div class="modal-content">
        <!-- autocomplete example -->
        <div class="row">
            <div class="col s12">
                <div class="row">
                    <form action="/flights" method="POST">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">textsms</i>
                            <!--<input type="text" id="autocomplete-input" class="autocomplete">-->
                            <!--<label for="autocomplete-input">Airline</label>-->
                            <input name="flight_date" id="flightDate" type="date" class="datepicker" placeholder="Flight Date">
                            <input name="flight_number" id="flightNumber" type="text" placeholder="Flight Number">
                            <input name="TripUuid" type="hidden" value="{{trip.uuid}}">
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <!-- Button triggers new topic to be added -->
        <button type="submit" class="modal-action waves-effect waves-green btn" id="addFlight">Submit</button>

        </form>
    </div>
</div>
